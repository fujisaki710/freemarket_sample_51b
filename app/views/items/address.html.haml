%body
  .single-infomation-1
    %header.single-header
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
        %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2399382397"}/
      %nav.progress-bar.signup-bar
        .clearfix
          %li.active
            会員情報
            .active__dot_red
            .active__line_1
          %li
            電話番号認証
            .active__dot_gray
            .active__line_2
          %li
            お届け先住所入力
            .active__dot_gray
            .active__line_3
          %li
            支払い方法
            .active__dot_gray
            .active__line_4
          %li
            完了
            .active__dot_gray
    %main.single-main
      %section.l-single-container
        %h2.l-single-head 会員情報入力
        %form.l-single-inner.registration-form{:action => "http://localhost:3000/phone", :method => "GET", :novalidate => "novalidate"}
          .l-single-content-1
            .form-group
              %label{:for => "nickname"} ニックネーム
              %span.form-require 必須
              %input.input-default{:name => "nickname", :placeholder => "例) メルカリ太郎", :type => "text", :value => ""}/
            .form-group
              %label{:for => "email"} メールアドレス
              %span.form-require 必須
              %input.input-default{:name => "email", :placeholder => "PC・携帯どちらでも可", :type => "email", :value => ""}/
            %input{:name => "login_type", :type => "hidden", :value => ""}/
            .form-group
              %label{:for => "password"} パスワード
              %span.form-require 必須
              %input.input-default{:name => "password", :placeholder => "6文字以上", :type => "password"}/
            .form-group
              %label{:for => "password"} パスワード (確認)
              %span.form-require 必須
              %input.input-default{:name => "password2", :placeholder => "6文字以上", :type => "password"}/
            .form-group
              %label{:for => "password"} パスワード (確認)
              %span.form-require 必須
              %input.input-default{:name => "password2", :placeholder => "6文字以上", :type => "password"}/
          .l-single-content
            %input{:name => "after_save_callback", :type => "hidden", :value => ""}/
